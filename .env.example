# Fortigate Enable and Disable Static Route Application
# Configuration Template for Institutional Deployment

# Application Configuration
APP_NAME="Fortigate Enable and Disable Static Route Application"
APP_ENV=production
APP_DEBUG=false

# Authentication
# Set secure credentials for your deployment
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here
# Set to 'true' after first password change (managed automatically)
PASSWORD_CHANGED=false

# API Configuration
# Configure your Fortigate firewall API endpoint
API_BASE_URL=https://your_firewall_ip:7799
API_BEARER_TOKEN=your_bearer_token_here
API_TIMEOUT=30
SSL_VERIFY=false

# Devices Configuration
# Format: DEVICE_[ID]=[NAME]:[DESCRIPTION]
# Add your devices here following the pattern below
DEVICE_7=Trading Lab:Trading Lab Internet Control
DEVICE_8=Data Science Lab:Data Science Lab Internet Control

# Device Status API Endpoint
# Base endpoint: /api/v2/cmdb/router/static/{device_id}
API_ENDPOINT=/api/v2/cmdb/router/static/
